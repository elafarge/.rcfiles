# Caps lock should behave like ESC (ESC is soooo far...)
xmodmap -e 'clear Lock' #ensures you're not stuck in CAPS on mode
xmodmap -e 'keycode 0x42=Escape' #remaps the keyboard so CAPS LOCK=ESC

xmodmap -e 'keycode 0x66=Escape' #remaps the shuffle key to ESC on my 2030
xmodmap -e 'add Control=0xff23' #remaps the desktop key to CTRL on my 2030
